{
  "version": "0.2.0",
  "configurations": [{
      "type": "node",
      "request": "attach",
      "name": "Node: Pick Process (Experimental)",
      "processId": "${command:PickProcess}",
      "restart": true,
      "protocol": "inspector",
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Node: Attach to Current Process",
      "address": "localhost",
      "port": 9229,
      "localRoot": "${workspaceFolder}/src/",
      "remoteRoot": "/app/src/",
      "restart": true,
      "protocol": "inspector",
    },
  ]
}
